{
	"name": "norns-repl",
	"publisher": "midouest",
	"displayName": "Norns REPL",
	"description": "Interact with Norns in a VSCode terminal",
	"version": "1.0.1",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/midouest/norns-repl"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onCommand:norns-repl.connect"
	],
	"contributes": {
		"commands": [
			{
				"command": "norns-repl.connect",
				"title": "Norns REPL: Connect to Matron..."
			}
		],
		"configuration": {
			"title": "Norns REPL",
			"properties": {
				"norns-repl.connect.host": {
					"type": "string",
					"default": "norns.local",
					"description": "Norns hostname"
				},
				"norns-repl.connect.port": {
					"type": "number",
					"default": 5555,
					"description": "Matron websocket port"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"ws": "^7.4.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"husky": "^4.3.8",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.15",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.21.1",
		"webpack-cli": "^4.5.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.3",
		"utf-8-validate": "^5.0.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
